        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script type="application/javascript" src="{{ asset('bundle.js') }}"></script>
    </head>
    <body>
    <header>
        {% block nav %}{% endblock %}
    </header>
    <main role="main" class="margin-navbar">
        {% block banner %} {% endblock %}
        {% block content %} {% endblock %}
    </main>
    <footer>
        {% block foot %} {% endblock %}
    </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
